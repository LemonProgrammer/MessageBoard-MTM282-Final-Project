extends layout

block content
    img#avatar(src="https://api.adorable.io/avatars/face/1/2/1/e7391a/100" onclick="myAvatar()")
    br
    div(id="imageOptionsDiv")
        p Color : 
        select(id="colorSelection")
            option(value="e7391a") Red
            option(value="3453b8") Blue
            option(value="7ccf39") Green
            option(value="#d2fc39") Yellow
            option(value="ffffff") White
            option(value="bf39e7") Purple
            option(value="e79c39") Orange
        br
        p Eyes : 
        select(id="eyeSelection")
            option(value="1") Eyes 1
            option(value="2") Eyes 2
            option(value="3") Eyes 3
            option(value="4") Eyes 4
            option(value="5") Eyes 5
            option(value="6") Eyes 6
            option(value="7") Eyes 7
            option(value="8") Eyes 8
            option(value="9") Eyes 9
            option(value="10") Eyes 10
        br
        p Noses : 
        select(id="noseSelection")
            option(value="2") Nose 2
            option(value="3") Nose 3
            option(value="4") Nose 4
            option(value="5") Nose 5
            option(value="6") Nose 6
            option(value="7") Nose 7
            option(value="8") Nose 8
            option(value="9") Nose 9
        br
        p Mouths : 
        select(id="mouthSelection")
            option(value="1") Mouth 1
            option(value="3") Mouth 3
            option(value="5") Mouth 5
            option(value="6") Mouth 6
            option(value="7") Mouth 7
            option(value="9") Mouth 9
            option(value="10") Mouth 10
            option(value="11") Mouth 11
        br
        p Size : 
        select(id="sizeSelection")
            option(value="100") 100
            option(value="200") 200
            option(value="300") 300
            option(value="400") 400
        br
        div(id="imageButtonsDiv")
            button(id="tryOutButt" onclick="myAvatar()") Try it Out!
            button(id="submitImage") Submit