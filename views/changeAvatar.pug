extends layout.pug

block headerBlock
    title Change Avatar
    script(src='/public/index.html')

block content
    img(src=faceUrl)
    div(id="imageOptionsDiv")
        p Color : 
        select(id="colorSelection")
            option(value="#e7391a" background-color="#e7391a") Red
            option(value="#3453b8" background-color="#3453b8") Blue
            option(value="##7ccf39" background-color="#7ccf39") Green
            option(value="#d2fc39" background-color="#d2fc39") Yellow
            option(value="#ffffff" background-color="#ffffff") White
            option(value="#bf39e7" background-color="#bf39e7") Purple
            option(value="#e79c39" background-color="#e79c39") Orange
        br
        p Eyes : 
        select(id="eyeSelection")
            option(value="1") Eyes 1
            option(value="2") Eyes 2
            option(value="3") Eyes 3
            option(value="4") Eyes 4
            option(value="5") Eyes 5
            option(value="6") Eyes 6
            option(value="7") Eyes 7
            option(value="8") Eyes 8
            option(value="9") Eyes 9
            option(value="10") Eyes 10
        br
        p Noses : 
        select(id="noseSelection")
            option(value="2") Nose 1
            option(value="3") Nose 2
            option(value="4") Nose 3
            option(value="5") Nose 4
            option(value="6") Nose 5
            option(value="7") Nose 6
            option(value="8") Nose 7
            option(value="9") Nose 8
        br
        p Mouths : 
        select(id="mouthSelection")
            option(value="1") Mouth 1
            option(value="3") Mouth 1
            option(value="5") Mouth 1
            option(value="6") Mouth 1
            option(value="7") Mouth 1
            option(value="9") Mouth 1
            option(value="10") Mouth 1
            option(value="11") Mouth 1
        br
        p Borders : 
        select(id="borderSelection")
            option(value=0) Border 1
            option(value=10) Border 2
            option(value=20) Border 3
            option(value=30) Border 4
            option(value=40) Border 5
            option(value=50) Border 6
        br
        div(id="imageButtonsDiv")
            button(id="tryOutButt") Try it Out!
            button(id="submitImage") Submit
        script(src='/public/index.html')